{
  "name": "markdown-preview-tool",
  "version": "0.0.1",
  "description": "Free code camp markdown preview task in ReactJS",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose",
    "start": "webpack-dev-server --open",
    "build": "webpack",
    "coverage": "opener ./coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "www.github.com/jonnyi/markdown-preview-tool"
  },
  "author": "Jonathan Irving",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "markdown": "^0.5.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^4.9.0",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.2.1",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.5.3",
    "opener": "^1.4.3",
    "path": "^0.12.7",
    "prop-types": "^15.6.0",
    "react-addons-test-utils": "^15.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack-dev-server": "^2.9.3"
  },
  "jest": {
    "setupFiles": [
      "./__tests__/shim.js",
      "./__tests__/global.js"
    ],
    "modulePathIgnorePatterns": [
      "shim.js",
      "global.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/node_modules/jest-css-modules"
    }
  }
}
